# Normalize line endings for all text files
* text=auto

# Explicitly declare text files
*.php text
*.css text
*.scss text
*.js text
*.json text
*.txt text
*.md text
*.xml text
*.yml text
*.yaml text
*.html text
*.htm text
*.pot text
*.po text

# Declare files that should always have LF line endings on checkout
*.sh text eol=lf

# Declare files that should always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote files that are binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.otf binary
*.mp4 binary
*.mp3 binary
*.ogg binary
*.webm binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Exclude files from archives
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.editorconfig export-ignore
.phpcs.xml export-ignore
.phpcs.xml.dist export-ignore
phpunit.xml export-ignore
phpunit.xml.dist export-ignore
.travis.yml export-ignore
.gitlab-ci.yml export-ignore
tests export-ignore
bin export-ignore
.DS_Store export-ignore
